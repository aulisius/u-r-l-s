{
  "extends": [
    "standard"
  ],
  "plugins": [
    "promise"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "key-spacing": 0,
    "semi": "off",
    "camelcase": "off",
    "no-var": "warn",
    "arrow-spacing": "error",
    "no-unused-vars": "warn",
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "max-len": [
      2,
      140,
      2
    ],
    "space-before-function-paren": "off",
    "object-curly-spacing": [
      2,
      "always"
    ]
  }
}